<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    >


    <LinearLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/LinearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/button_read"
                style="@style/AppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="读取数据" />

            <Button
                android:id="@+id/button_write"
                style="@style/AppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="写入数据" />
        </LinearLayout>





        <LinearLayout
            android:id="@+id/LinearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/infoAraeBasePool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/l12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/i12"
                        android:src="@drawable/touxiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/tvuser"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/L1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/i1"
                        android:src="@drawable/area_" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/tvarea"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/L2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/i2"
                        android:src="@drawable/base_" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/tvbase"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>
            </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/L3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/i3"
                    android:src="@drawable/pool_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="池塘："
                    android:id="@+id/textView4"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:id="@+id/spinner_pool"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/L4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/i4"
                    android:src="@drawable/type_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="种类："
                    android:id="@+id/textView7"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/i5"
                    android:src="@drawable/flow1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="流向："
                    android:id="@+id/textView8"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:id="@+id/spinner_flow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/L6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/i6"
                    android:src="@drawable/weigtht_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="重量："
                    android:id="@+id/textView9"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editText"
                    android:hint="输入重量(KG)"
                    android:digits="0123456789."
                    />
            </LinearLayout>
        </LinearLayout>





    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout1">

        <EditText
            android:id="@+id/linearLayout_readData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:gravity="top"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/L8"
            android:layout_alignParentTop="true">
        </EditText>

        <LinearLayout
            android:id="@+id/L8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/button_readClear"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@android:color/holo_orange_light"
                android:text="清空" />

            <Button
                android:id="@+id/button_back"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@android:color/holo_orange_light"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:text="返回" />
        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>